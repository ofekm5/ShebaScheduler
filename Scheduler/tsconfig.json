{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src", // Make sure to include this
    "typeRoots": ["./node_modules/@types", "./src/@types"] // Add custom types here if needed
  },
  "include": ["src/**/*.ts"], // Include all .ts files in src
  "exclude": ["node_modules"]
}
